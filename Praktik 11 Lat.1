def bubbleSort(himpunan):
    n = len(himpunan)
 
    for i in range(n):
 
        for j in range(0, n-i-1):
 
            if himpunan[j] > himpunan[j+1] :
                himpunan[j], himpunan[j+1] = himpunan[j+1], himpunan[j]
                
def binarySearch(himpunan, l, r, x):
 
    # Check base case
    if r >= l:
 
        mid = l + (r - l) // 2
 
        if himpunan[mid] == x:
            return mid
 
        elif himpunan[mid] > x:
            return binarySearch(himpunan, l, mid-1, x)
 
        else:
            return binarySearch(himpunan, mid + 1, r, x)
 
    else:
        return -1

himpunan = [14, 4, 8, 12, 84, 32, 64, 89, 42]
