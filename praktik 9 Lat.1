def penjumlahan(angka = 0, jumlah = 0, x = 1):
    if (jumlah <= 0):
        return 0
    else:
        angka = int(input("masukkan angka " + str(x) + ": "))
        if(jumlah == 1):
            return angka
        else:
            x+=1
            return angka + penjumlahan(angka, jumlah-1, x)
        
jumlah = int(input("masukkan jumlah: "))  
nilai  = penjumlahan(jumlah = jumlah)
print("Hasil penjumlahannya adalah: " + str(nilai))
