def pilihan(e, x, r):
    temp = e[x]
    e[x] = e[r]
    e[r] = temp

def n_bubblesort(e, i):
    for x in range(i - 1):
        if e[x] > e[x + 1]:
            pilihan(e, x, x + 1)
    if i - 1 > 1:
        n_bubblesort(e, i - 1)

